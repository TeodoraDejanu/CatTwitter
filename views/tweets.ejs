<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <style>
      body {
        background-color: #f8dddd;
      }
      h1 {
        padding: 20px;
      }
      img {
        width: 400px;
        height: 437px;
        object-fit: cover;
      }
      .cardshow {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 40px;
      }

      .cardshow > div {
        box-shadow: 10px 7px 5px 3px black;
        margin-bottom: 10px;
      }
      .container {
        width: 300px;
      }
      @media only screen and (max-width: 800px) {
        .cardshow {
          justify-content: center;
          gap: 10px;
        }
        .container {
          width: 250px;
        }
      }
    </style>
    <title>Document</title>
  </head>
  <body>
    <div id="nav-placeholder"></div>
    <script>
      $(function () {
        $("#nav-placeholder").load("nav.html");
      });
    </script>
    <h1 class="text-center">See all tweets</h1>
    <div class="container mx-auto cardshow">
      <%if(record.length > 0) { %> <% record.forEach(function(element){%>
      <div class="card shadow-lg" style="width: 30rem">
        <img
          class="card-img-top"
          src="/images/<%= element.pagePhoto %>"
          alt="Card image cap"
        />
        <div class="card-body">
          <h3 class="card-title"><%= element.title %></h3>
          <p class="card-text"><%= element.content %></p>
          <p class="card-text"><%= element.category %></p>
          <a href="/tweets/<%= element._id %>" class="btn btn-primary">Edit</a>
          <form
            action="/tweets/<%= element._id %>?_method=DELETE"
            method="POST"
          >
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <br />
      <% }) %> <% } %>
    </div>
  </body>
</html>
